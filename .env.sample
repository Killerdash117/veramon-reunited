# Veramon Reunited Environment Configuration
# Copy this file to .env and fill in your values

# Discord Bot Configuration
BOT_TOKEN=your-discord-bot-token-here
COMMAND_PREFIX=!
DEV_GUILD_ID=your-development-server-id  # For testing commands in a specific server

# Database Configuration
DATABASE_PATH=data/veramon_reunited.db  # Default SQLite database path

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/veramon.log

# Administrator Configuration
DEVELOPER_IDS=123456789,987654321  # Comma-separated list of Discord user IDs with developer access

# External Services (if needed)
# WEBHOOK_URL=your-webhook-url  # For external notifications
# API_KEY=your-api-key  # If using external APIs

# Performance Settings
CONNECTION_POOL_SIZE=10  # Number of database connections to maintain
CACHE_TTL=300  # Cache time-to-live in seconds

# Advanced Settings
DEBUG_MODE=False  # Enable extended debug output
MAINTENANCE_MODE=False  # Set to True to put the bot in maintenance mode